        border: 1px solid rgba(255, 255, 255, 0.125);
        padding: 20px 25px;
        width: 70%;
    } */
    span{
        font-style: italic;
    }
</style>

<div id="container">
    <a href="/forum" class="btn btn-outline-dark">Back</a>
    <main class="d-flex align-items-center justify-content-center custom">
        <div class="card mb-4" style="width: 50%; background: rgba(0, 0, 0, 0.7);">
            <div class="card-header">
                <h3 class="card-title text-light"><%= post.title %></h3>
            </div>
            <div class="card-body">
                <p class="card-text text-light"><%= post.message %></p>
            </div>
            <div class="card-body">
                <span class="card-text text-light"><%= post.created_at %></span>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <% if (post.user_id._id.toString() === user.id.toString()) { %>
                    <form action="/delete-post/<%= post._id %>" method="post">
                        <button class="btn btn-outline-light">Delete</button>
                    </form>
                    <a href="/post/edit/<%= post._id %>" class="btn btn-light">Edit Post</a>
                <% } %>
            </div>
        </div>
    </main>
</div>

    

<%- include('./partials/footer'); -%>